<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAnimalActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Add Animal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginBottom="20dp"
        android:background="#CCCCCC"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#455A64">

    </EditText>

    <EditText
        android:id="@+id/idInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameInput"
        android:layout_marginBottom="20dp"
        android:background="#CCCCCC"
        android:ems="10"
        android:hint="ID"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#455A64">

    </EditText>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idInput"
        android:layout_marginBottom="20dp"
        android:background="#CCCCCC"
        android:ems="10"
        android:hint="Weight"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#455A64">

    </EditText>

    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radio_group"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/editText1">

        <RadioButton
            android:id="@+id/radio_lb"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="lb"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radio_kg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="kg"
            android:textSize="20sp"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Spinner
        android:id="@+id/type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginBottom="20dp"
        android:contentDescription="Animal Type"
        android:minHeight="48dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/receipt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_spinner"
        android:layout_marginBottom="20dp"
        android:background="#CCCCCC"
        android:ems="10"
        android:hint="Receipt Date"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#455A64">

    </EditText>



</RelativeLayout>