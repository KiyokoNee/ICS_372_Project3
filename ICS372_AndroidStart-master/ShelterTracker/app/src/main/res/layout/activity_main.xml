<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animals_by_shelter_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/show_shelter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showShelterList"
        android:text="Show Shelter List"
        android:textSize="30sp" />

    <Button
        android:id="@+id/show_all_animals_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:onClick="showAllAnimals"
        android:text="Show All Animals" />

    <Button
        android:id="@+id/change_receiving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:onClick="toggleReceiving"
        android:text="Enable/Disable Receiving" />

    <Button
        android:id="@+id/show_dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showDialog"
        android:text="Show Dialog"
        android:textSize="30sp" />

    <Button
        android:id="@+id/add_new_animal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addAnimal"
        android:text="Add Animal"
        android:textSize="30sp" />

    <Button
        android:id="@+id/import_JSON_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:onClick="importJSON"
        android:text="Import JSON"
        android:textSize="30sp" />

    <Button
        android:id="@+id/import_XML_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="importXML"
        android:text="Import XML"
        android:textSize="30sp" />

    <Button
        android:id="@+id/export_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exportShelterList"
        android:text="Export Shelter Roster"
        android:textSize="30sp" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="exit"
        android:text="Exit"
        android:textSize="30sp" />


</LinearLayout>